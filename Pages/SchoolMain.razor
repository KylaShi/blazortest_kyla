@page "/schoolmain"
@using MudBlazor
@using BlazorTest.Data
@inject SchoolService SchoolService
@inject NavigationManager NavigationManager


<MudTable Items="@SchoolService.Schools">
    <HeaderContent>
        <MudTh>School Name</MudTh>
        <MudTh>Address</MudTh>
        <MudTh>School Code</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="School Name">@context.SchoolName</MudTd>
        <MudTd DataLabel="Address">@context.Address</MudTd>
        <MudTd DataLabel="School Code">@context.SchoolCode</MudTd>
    </RowTemplate>
</MudTable>


<MudButton Variant="Variant.Filled" Color="Color.Primary" @onclick="CreateSchool">Add School</MudButton>



@code {

    private void CreateSchool()
    {
        NavigationManager.NavigateTo("/schoolform");

    }

}
